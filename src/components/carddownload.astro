---
import { Tick } from "@components/ui/icons";
import Link from "@components/ui/link.astro";

const { available } = Astro.props;
---

<div>
  <div
    class="flex flex-col w-full order-first lg:order-none border-2 border-[#D8DEE9] border-opacity-50 py-5 px-6 rounded-md">
    <div class="text-center">
      <h4 class="text-lg font-medium text-gray-400">{available.version}</h4>
      <p
        class="mt-3 text-4xl font-bold text-black md:text-4xl">
        {available.name}
      </p>
    </div>
    <div class="flex mt-8">
      <Link
        href={available.button.link || "#"}
        block
        style={available.ios ? "primary" : "outline"}>
        {available.button.text || "Comece agora"}
      </Link>
    </div>
  </div>
</div>
